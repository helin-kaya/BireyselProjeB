@using CicekProjesiUI.Models
@model CicekProfileViewModel

@{
    Layout = "~/Views/Shared/_LayoutPlot.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
</head>
<body>
    @using (Html.BeginForm("Add", "Cicek", FormMethod.Post,
    new
    {
        @class = "form-horizontal",
        enctype = "multipart/form-data"
    }))
    {
        <h2>Eklemek İstediğiniz Ürünün Detaylarını Girin...</h2>
        <br />
        <div class="row">
            <div class="col-6 offset-3 offset-3">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
            <div class="col-6">
                <img src="~/Content/images/indir1.png" width="250" height="250" />
                <hr />
                @Html.TextBoxFor(x => x.FlowerPictureUpload, new
                {
                    @class = "form-control",
                    @type = "file",
                    @id = "flower-picture",
                    multiple = "false"
                })
            </div>

            <div class="col-6">
                <div class="row">
                    <div class="col-lg-12">
                        <label>Çiçek Adı:</label>
                        @Html.TextBoxFor(x => x.Name, null, new { @type = "text", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-12">
                        <label>Açıklama:</label>
                        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Description)
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <label>Fiyat:</label>
                        @Html.TextBoxFor(x => x.Price, null, new { @type = "text", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Price)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <label>Flower type id:</label>
                        @Html.TextBoxFor(x => x.FlowerTypesId, null, new { @type = "text", @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.FlowerTypesId)
                    </div>
                </div>
                <div style="margin-top:50px;">
                    <button type="submit" class="btn btn-primary container">Ekle</button>
                </div>
            </div>
        </div>
    }
</body>
</html>


